version: '2.4'

volumes:
  mysql_data:

services:
  nginx:
    image: nginx:stable
    working_dir: /app
    volumes:
      - ./:/app
      - ./tools/.docker/images/nginx/vhost.conf:/etc/nginx/conf.d/default.conf
    ports:
      - 8080:80
    depends_on:
      node:
        condition: service_started
      php:
        condition: service_started
    labels:
      - traefik.backend={{ @('workspace.name') }}
      - traefik.frontend.rule=Host:{{ @('workspace.name') }}.my127.site
      - traefik.docker.network=my127ws
      - traefik.port=80
    networks:
      private: {}
      shared: {}

  php:
    build:
      context: .
      target: dev
    volumes:
      - ./:/app
    environment:
      docker: "true"
    depends_on:
      mysql:
        condition: service_healthy
    labels:
      - traefik.enable=false
    networks:
      - private

  mysql:
    image: {{ @('mysql.image') }}:{{ @('mysql.version') }}
    volumes:
      - mysql_data:/var/lib/mysql
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: "true"
      MYSQL_DATABASE: drupal
      MYSQL_USER: drupal
      MYSQL_PASSWORD: drupal
    healthcheck:
      test: ["CMD-SHELL", "bash", "-c", "echo > /dev/tcp/localhost/3306"]
      interval: 1s
    labels:
      - traefik.enable=false
    networks:
      - private

  node:
    image: node:{{ @('node.version') }}
    working_dir: /node
    volumes:
      - ./{{ @('drupal.docroot') }}:/node
    labels:
      - traefik.enable=false

networks:
  private:
    external: false
  shared:
    external:
      name: my127ws
