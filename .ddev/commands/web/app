#!/usr/bin/env bash

## Description: Helper commands for the for theme
## Usage: app install|refresh

set -e

if [ $# -eq 0 ] ; then
  echo 'No arguments entered.'
  exit 1
fi

case $1 in
  install)
    drush site:install -y --account-pass=admin123 --existing-config
    drush user:login
    touch .flag-built
    ;;

  refresh)
    drush config-import -y
    drush cache-rebuild
    ;;

  *)
    echo "Invalid argument: $1"
    ;;
esac
